{
    "name": "op20-indexer",
    "version": "1.0.0",
    "description": "Indexes OP20 token transfers and maintains holder balances",
    "author": {
        "name": "Your Name",
        "email": "your.email@example.com"
    },
    "main": "dist/index.jsc",
    "target": "bytenode",
    "type": "plugin",
    "pluginType": "standalone",
    "opnetVersion": ">=1.0.0",
    "checksum": "",
    "permissions": {
        "database": {
            "enabled": true,
            "collections": ["op20_transfers", "op20_balances", "op20_tokens"],
            "indexes": {
                "op20_transfers": [
                    { "key": { "blockHeight": 1, "txHash": 1 }, "unique": false },
                    { "key": { "tokenAddress": 1 }, "unique": false }
                ],
                "op20_balances": [
                    { "key": { "tokenAddress": 1, "holderAddress": 1 }, "unique": true }
                ],
                "op20_tokens": [{ "key": { "address": 1 }, "unique": true }]
            }
        },
        "blocks": {
            "preProcess": false,
            "postProcess": true,
            "onChange": true
        },
        "epochs": {
            "onChange": false,
            "onFinalized": false
        },
        "mempool": {
            "txFeed": false,
            "txSubmit": false
        },
        "api": {
            "addEndpoints": true,
            "addWebsocket": false,
            "basePath": "/op20-indexer"
        },
        "threading": {
            "maxWorkers": 2,
            "maxMemoryMB": 256
        },
        "filesystem": {
            "configDir": true,
            "tempDir": true
        },
        "blockchain": {
            "blocks": true,
            "transactions": true,
            "contracts": true,
            "utxos": false
        }
    },
    "resources": {
        "memoryLimitMB": 512,
        "cpuLimit": 1,
        "timeoutMs": 30000
    },
    "lifecycle": {
        "loadPriority": 100,
        "defaultEnabled": true
    }
}
